<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PatientListByStatusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="32dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/listBackButton"
            android:layout_width="34dp"
            android:layout_height="33dp"
            android:layout_marginRight="24dp"
            android:drawableEnd="@drawable/baseline_arrow_back_24"
            android:background="@android:color/transparent"
             />

        <TextView
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Lista de Cadastro"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="32sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCovid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/backgound_button"
            android:text="covid"
            android:textAllCaps="true"
            android:textColor="@color/grey"
            android:textSize="24sp"
            android:padding="24dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonQuarantine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/backgound_button"
            android:text="Quarentena"
            android:textAllCaps="true"
            android:textColor="@color/grey"
            android:textSize="24sp"
            android:padding="24dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonReleased"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/backgound_button"
            android:text="Liberado"
            android:textAllCaps="true"
            android:textColor="@color/grey"
            android:textSize="24sp"
            android:padding="24dp"
            />


    </LinearLayout>

</LinearLayout>