<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/whiteTwo"
        >


    >
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textSize="16dp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/ageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idade:"
            android:textSize="16dp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/temperatureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="temperatura corporal:"
            android:textSize="16dp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/coughTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="período (em dias) com tosse"
            android:textSize="16dp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/headacheTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="período (em dias) com dor de cabeça:"
            android:textSize="16dp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/countryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pais visitado:"
            android:textSize="16dp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/countryWeekTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quantas semanas visitou o Pais:"
            android:textSize="16dp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textSize="16dp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            />

    </LinearLayout>




</LinearLayout>